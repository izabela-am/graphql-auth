{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2018",
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "paths": {
      "@resolvers/*": [
        "resolvers/*"
      ],
      "@infra/*": [
        "infra/*"
      ],
      "@database/*": [
        "database/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "rootDirs": [
      "./src",
      "./__test__"
    ]
  },
  "include": [
    "./src/**/*",
    "./.credentials/**/*.json"
  ],
  "exclude": [
    "./node_modules/*",
    "./dist"
  ]
}